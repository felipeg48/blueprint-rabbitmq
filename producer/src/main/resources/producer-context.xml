<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:rabbit="http://www.springframework.org/schema/rabbit"
	xsi:schemaLocation="http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<rabbit:connection-factory id="connectionFactory"/>
	<rabbit:queue name="vehicle.changes"/>
	<rabbit:admin connection-factory="connectionFactory"/>
		
	<bean id="messageConverter" class="org.springframework.amqp.support.converter.JsonMessageConverter"
		p:createMessageIds="true"/>

	<bean id="amqpTemplate" class="com.carfax.blueprint.amqp.BufferedRabbitTemplate"
		p:connectionFactory-ref="connectionFactory"
		p:failoverQueue-ref="failOverQueue"
		p:routingKey="vehicle.changes"
		p:messageConverter-ref="messageConverter"/>
	
	<bean id="failOverQueue" class="java.util.concurrent.ConcurrentLinkedQueue"/>
	
	<bean id="unsentMessagesHandler" class="com.carfax.blueprint.amqp.UnsentMessageHandler" 
		p:amqpTemplate-ref="amqpTemplate"
		p:failOverQueue-ref="failOverQueue"/>
		
</beans>
